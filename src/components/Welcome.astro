<style>
	#container {
		font-family:
			Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial,
			sans-serif;
		height: 100vh;
		display: flex;
		flex-direction: column;
		overflow-x: hidden;
	}

	main {
		display: flex;
		flex-direction: column;
		justify-content: start;
		align-items: center;
		gap: 50px;
	}

	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		padding: 16px 16px 16px 16px;
		gap: 16px;
	}

	.name {
		font-family:
			ui-monospace, "Cascadia Code", "Source Code Pro", Menlo, Consolas,
			"DejaVu Sans Mono", monospace;
		font-weight: normal;
		color: #41d3ff;
		margin: 0;
	}

	h2 {
		margin: 0 0 1em;
		font-weight: normal;
		color: #111827;
		font-size: 20px;
	}

	.box {
		padding: 16px;
		background: rgba(255, 255, 255, 1);
		border-radius: 16px;
		border: 1px solid white;
	}

	#bio {
		width: 0;
		min-width: 100%;
	}

	.highlight {
		color: #41d3ff;
	}

	.link-icon {
		width: 3rem;
		height: 3rem;
		transition: all ease-in-out 0.2s;
	}

	#git-logo:hover {
		color: rgb(188, 82, 238);
		filter: drop-shadow(2px 4px 2px rgb(131, 57, 165));
	}

	#linkedIn-logo:hover {
		color: rgb(10, 102, 194);
		filter: drop-shadow(2px 4px 2px rgb(7, 75, 143));
	}

	#twitter-logo:hover {
		color: rgb(29, 161, 242);
		filter: drop-shadow(2px 4px 2px rgb(19, 107, 161));
	}

	#email-logo:hover {
		color: rgb(172, 42, 19);
		filter: drop-shadow(1px 1px 2px rgb(172, 42, 19));
	}

	@property --from-color {
		syntax: "<color>";
		initial-value: #7c87ff3b;
		inherits: false;
	}

	@property --to-color {
		syntax: "<color>";
		initial-value: #7c87ff3b;
		inherits: false;
	}

	.gradient-section {
		background: linear-gradient(
			to top left,
			var(--from-color) 1%,
			var(--to-color) 50%
		);
		transition:
			--from-color 0.5s ease,
			--to-color 0.5s ease;
	}

	.gradient-section:hover {
		background: linear-gradient(
			to top left,
			var(--from-color) 1%,
			var(--to-color) 50%
		);
		--from-color: #6d73c24f;
		--to-color: #7c87ff3b;
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}

		#links {
			flex-wrap: wrap;
		}

		#links a.button {
			padding: 14px 18px;
		}

		h1 {
			line-height: 1.5;
		}

		.link-icon {
			width: 2rem;
			height: 2rem;
		}
	}
</style>
