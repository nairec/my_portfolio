---
const {pathname} = Astro.url;

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Projects', href: '/projects' },
  { name: 'Blog', href: '/blog' },
];

const isActive = (href:string) => {
  const currentPath = pathname.replace(/\/$/, "");
  const targetPath = href.replace(/\/$/, "");
  return currentPath === targetPath;
};
---

<nav class="flex flex-row gap-5 items:start bg-black text-white p-5">
    {navItems.map((item)=> (
        <a href={item.href} class:list={["hover:text-cyan-300 transition-all duration-100 ease-in-out", isActive(item.href) ? "text-blue-300" : "text-white"]}>
            {item.name}
        </a>
    ))}
</nav>